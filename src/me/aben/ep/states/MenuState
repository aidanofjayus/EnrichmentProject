package me.aben.ep.states;

import java.awt.Color;
import java.awt.Graphics2D;

import me.aben.ep.Background;

public class MenuState extends GameState {

	private Background bg;
	
	public MenuState(StateManager stateManager){
		this.stateManager = stateManager;
		bg = new Background("/background_image_temp.gif", 1);
		bg.setVector(-0.1, 0);
	}
	
	@Override
	public void init() {
		
	}

	@Override
	public void update() {
		bg.update();
	}

	@Override
	public void draw(Graphics2D g) {
		bg.draw(g);
		
		g.setColor(new Color(35, 34, 184));
		g.drawString("Sample Title", 100, 100);
	}

	@Override
	public void keyPressed(int k) {
		
	}

	@Override
	public void keyReleased(int k) {
		
	}

}
